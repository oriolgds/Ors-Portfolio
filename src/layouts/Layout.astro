---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Oriol Giner Díaz es un desarrollador de software versàtil, apasionado y con mucha energia. Ha participado múltiples proyectos como Tech Gesture o MIP y esta especializado en JS, Angular y desarrollo de apps con Flutter."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="logo/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Bootstrap icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Foldit:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </head>
  <body>
    <div id="loading-indicator">
      <input type="checkbox" id="check" />
      <button id="open-menu" aria-label="Menu"
        ><label for="check">          
          <span></span>
          <span></span>
          <span></span>
        </label></button
      >
      <nav id="nav">
        <ul>
          <li>Inicio</li>
          <li>Trabajo</li>
          <li class="active">Contacto</li>
        </ul>
      </nav>
    </div>
    <slot />
    
  </body>
</html>
<style is:global>
  :root {
    --black: #0a1704;
    --dark-green: #193b0a;
    --background: #0a1704;
    --yellow: #e1b62f;
    --cream: #f8ecc5;
    --white-decorations: #efefef;
  }
  .background {
    background-color: var(--background);
    color: var(--cream);
  }
  .title {
    font-family: "Abril Fatface", serif;
	  font-weight: 400;
	  font-style: normal;
	  font-size: 50px;
  }
  vertical-bar {
    display: block;
    background-color: var(--white-decorations);
    width: 2.5px;
    height: 100px;
    margin: 7px auto;  
  }
  @font-face {
    font-family: Benguiat;
    src: url("/fonts/Benguiat/Benguiat.OTF") format("opentype");
  }

  @font-face {
    font-family: Benguiat;
    font-weight: bold;
    src: url("/fonts/Benguiat/BenguiatBold.OTF") format("opentype");
  }
  @font-face {
    font-family: BrianJames;
    src: url("/fonts/Benguiat/BrianJamesBoldCond.otf") format("opentype");
  }
</style>
<style>
  #loading-indicator {
    z-index: 5;
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 3px;
    border-radius: 50px;
    
  }
  #open-menu {
    position: fixed;
    right: 10px;
    top: 10px;
    font-size: 60px;
    background-color: var(--yellow);
    border-radius: 30px;
    padding: 10px 15px;
    border: var(--dark-green) solid 1px;

    display: none;
    transition: 200ms all;
    transform: translateY(0px);
    box-shadow: -1px 12px 49px 1px rgba(0, 0, 0, 0.75);
    -webkit-box-shadow: -1px 12px 49px 1px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: -1px 12px 49px 1px rgba(0, 0, 0, 0.75);
  }
  #open-menu:hover {
    transform: translateY(-2px);
    box-shadow: -1px 14px 49px 1px rgba(0, 0, 0, 0.75);
    -webkit-box-shadow: -1px 14px 49px 1px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: -1px 14px 49px 1px rgba(0, 0, 0, 0.75);
  }

  nav {    
    z-index: 6;
    display: flex;
    flex-wrap: wrap;
    background-color: var(--cream);
    border: 4px var(--dark-green) solid;
    padding: 15px 20px;
    border-radius: 50px;
  }
  nav ul {
    list-style-type: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0px 10px;
  }
  nav ul li {
    cursor: pointer;
    width: 120px;
    text-align: center;
    border-radius: 50px;
    padding: 3px 0px;
  }
  nav ul li.active {
    background-color: var(--yellow);
  }

  @media (width <= 890px) {
    #open-menu {
      display: block;
    }
    nav {
      transition:
        500ms filter,
        700ms transform;
      width: calc(100vw - 40px);
      position: fixed;
      top: 120px;
      left: 10px;
      display: flex;
      justify-content: center;
      text-align: center;
      /* display: none !important; */
    }
    nav {
      transform: translateY(-20px);
      filter: opacity(0);
    }    
    nav ul {
      display: flex;
      justify-content: center;
      text-align: center;
      gap: 10px 10px;
    }
    nav ul li {
      margin: 5px 0px;
      padding: 10px 0px;
    }
  }
</style>
<style>
  label {
    display: flex;
    flex-direction: column;
    width: 70px;
    cursor: pointer;
  }

  label span {
    background: var(--dark-green);
    border-radius: 10px;
    height: 7px;
    margin: 7px 0;
    transition: 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }

  span:nth-of-type(1) {
    width: 50%;
  }

  span:nth-of-type(2) {
    width: 100%;
  }

  span:nth-of-type(3) {
    width: 75%;
  }

  input[type="checkbox"] {
    display: none !important;
    opacity: 0;
    position: fixed;
    top: 10px;
    right: 0px; 
    width: 120px;
    height: 85px;
  }

  input[type="checkbox"]:checked ~ button#open-menu span:nth-of-type(1) {
    transform-origin: bottom;
    transform: rotatez(45deg) translate(8px, 0px);
  }

  input[type="checkbox"]:checked ~ button#open-menu span:nth-of-type(2) {
    transform-origin: top;
    transform: rotatez(-45deg);
  }

  input[type="checkbox"]:checked ~ button#open-menu span:nth-of-type(3) {
    transform-origin: bottom;
    width: 50%;
    transform: translate(30px, -11px) rotatez(45deg);
  }
  input[type="checkbox"]:checked ~ nav {
      filter: opacity(1);
      transform: translateY(0px);
    }
</style>
