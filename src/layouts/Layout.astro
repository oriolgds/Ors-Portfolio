---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Oriol Giner Díaz es un desarrollador de software versàtil, apasionado y con mucha energia. Ha participado múltiples proyectos como Tech Gesture o MIP y esta especializado en JS, Angular y desarrollo de apps con Flutter." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--black: #0a1704;
		--dark-green: #193b0a;
		--yellow: #e1b62f;
		--cream: #f8ecc5;
	}
	@font-face {
	    font-family: Benguiat;
	    src: url("fonts/Benguiat/Benguiat.OTF") format("opentype");
	}

	@font-face {
	    font-family: Benguiat;
	    font-weight: bold;
	    src: url("fonts/Benguiat/BenguiatBold.OTF") format("opentype");
	}
</style>
