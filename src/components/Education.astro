---
const { title } = Astro.props;
const posts = await Astro.glob("../pages/md/education/*.md");
// Images
---

<div class="background">
	<div class="container">
		<h4 class="mb-4 ar-1">{title}</h4>
		<div class="row">
			{
				posts.map((post) => (
					<div class="col-12 col-md-6 mb-5 ar-1">
						<div class="row">
							<h6 style="max-width: 100px">
								{post.frontmatter.date}
							</h6>
							<div class="col">
								<h5 class="col mb-1">
									{post.frontmatter.title}
								</h5>
								<div class="description">
									<post.Content />
								</div>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
	<slot name="paralax-image" />
</div>

<style>
	* {
		font-family: "Times New Roman", Times, serif;
	}
	h4 {
		font-family: "BrianJames", serif;
		font-weight: bold;
		font-style: normal;
		font-size: 50px;
		text-align: left;
		color: var(--yellow);
		text-transform: uppercase;
		display: flex;
		align-items: center;
	}
	@media (width < 576px) {
		h4 {
			word-break: break-all;
		}
	}
	@media (width >= 576px) {
		h4::after {
			content: "";
			width: 100%;
			height: 1px;
			margin-right: 15px;
			margin-left: 10px;
			opacity: 0.8;
			background-color: var(--white-decorations);
		}
	}
	h5 {
		color: var(--yellow);
		font-size: 16px;
	}
	h6 {
		color: var(--white-decorations);
		font-weight: bold;
	}
	.description {
		color: var(--white-decorations);
	}
</style>
