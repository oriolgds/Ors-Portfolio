---
import * as footerMD from '../pages/md/footer/footer.md';
---


<div class="background">
	<div class="row">
		<div class="col-12 col-md-6 px-3 px-md-5 py-5" style="background-color: var(--yellow);">
			<h3>
				Oriol<br>Giner
			</h3>
			<div class="info ps-2">
				<footerMD.Content/>
			</div>

		</div>	
		<div class="col col-md-6 photo">
			
		</div>
	</div>
</div>
<style>
	h3 {
		font-family: "BrianJames", serif;
	  	font-weight: bold;
	  	font-style: normal;
	  	font-size: 98.2px;
		text-align: left;
    	color: var(--dark-green);
		text-transform: uppercase;
		letter-spacing: -4px;
	}
	.info {
		font-family: 'Times New Roman', Times, serif;
		font-size: 19px;
		color: var(--black);
	}
</style>	
<style>
	.photo {
		background-size: cover;
		background-position: 50% 80%;
		background-image: url('/images/correfoc.jpg');
		background-repeat: no-repeat;
	}
	@media (width <= 768px ) {
		.photo {
			display: none;
		}
		h3 {
			margin-bottom: 0px;
		}
	}
	@media (width > 768px){
		h3 {
			margin-bottom: 50px;
		}
	}
</style>