---
const posts = await Astro.glob('../pages/md/work/*.md');
---


<div class="background">
	<div class="container py-5">
		<h4 class="mb-4 ar-1">Trabajo destacado</h4>
		<div class="grid">
			{posts.map(post => <div class="work-card">
				<img src={post.frontmatter.image} class="mb-2" />
				{/* <div class="card-title">{post.frontmatter.title}</div> */}
				<div class="card-description mt-1">{post.frontmatter.shortDescription}</div>
				<div class="button-container mt-2">
					<a href="">Leer m√°s</a>
					<a class="external-link" href={post.frontmatter.projectWebsite} target="_blank"><i class="bi bi-box-arrow-up-right me-2"></i>Web del proyecto</a>
				</div>
			</div>
				)
			}
		</div>
		
	</div>
</div>

<style>
	.grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 100px 20px;
	}
	@media (width <= 576px) {
		.grid {
			grid-template-columns: auto;
		}
	}
	@media (width <= 768px) and (width > 576px) {
		.grid {
			grid-template-columns: auto auto;
		}
	}
	.button-container {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}
	.work-card img {
		border-radius: 20px;		
	}
	.button-container a {
		transition: 500ms all;
		border: 1px var(--white-decorations) solid;
		padding: 6px 30px;
		color: var(--white-decorations);
		background-color: transparent;
	}
	.button-container a:hover {
		color: var(--black);
		background-color: var(--white-decorations)
	}
	.button-container a > i {
		transition: 500ms all;
		font-size: 0px;
		transform-origin: center;
	}
	.button-container a:hover > i {
		font-size: 1em;
	}
	.card-title, .card-description {
		color: var(--yellow);
		text-transform: uppercase;
		font-size: 14px;
	}
</style>

<style>
* {
		font-family: 'Times New Roman', Times, serif;
	}
	h4 {
		font-family: "BrianJames", serif;
	  	font-weight: bold;
	  	font-style: normal;
	  	font-size: 50px;
		text-align: left;
    	color: var(--yellow);
		text-transform: uppercase;
		display: flex;
		align-items: center;		
  	}
	@media (width >= 576px) {
		h4::after {
			content: '';
			width: 100%;
			height: 1px;
			margin-right: 15px;
			margin-left: 10px;
			opacity: 0.8;
			background-color: var(--white-decorations);
		}
	}

</style>